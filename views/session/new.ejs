<form action="/session/create" method="POST" class="form-sign-in">
	<h2>Sign In</h2>

	<% if(flash && flash.err) { %>
		<% Object.keys(flash.err).forEach(function(error) { %>
			<div class="alert alert-danger"><%- JSON.stringify(flash.err[error]) %></div>
		<% }) %>
	<% } %>

	<div class="form-group">
		<input type="text" class="form-control" name="email" placeholder="your@email.com">
	</div>

	<div class="form-group">
		<input type="password" class="form-control" name="password" placeholder="password">
	</div>

	<input type="submit" value="sign in" class="btn btn-lg btn-success btn-block">
	<input type="hidden" name="_csrf" value="<%= _csrf %>">
</form>
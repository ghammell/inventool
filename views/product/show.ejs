<div class="container">
	<h2><%= product.name %></h2>
	<hr>
	<h5><b>Inventory On Hand:</b> <%= product.inventoryOnHand %></h5>
	<h5><b>Unit Price:</b>  $<%=Number(product.unitPrice).toLocaleString('en') %></h5>
	<h5><b>Description:</b> <%= product.description %></h5>
	<h5><b>Bar Code Number:</b> <%= product.barCodeNumber %></h5>
	<div class="row">
		<div class="col-xs-12 col-sm-3" style="margin-top: 10px;">
			<a href="/product/<%= product.id %>/sales" class="btn btn-primary btn-block">View Sales</a>
		</div>
		<div class="col-xs-12 col-sm-3" style="margin-top: 10px;">
			<a href="/purchase/index?product=<%= product.id %>" class="btn btn-success btn-block">View Purchases</a>
		</div>		
		<div class="col-xs-12 col-sm-3" style="margin-top: 10px;">
			<a href="/product/edit/<%= product.id %>" class="btn btn-warning btn-block">Edit</a>
		</div>
		<div class="col-xs-12 col-sm-3" style="margin-top: 10px;">
			<form action="/product/destroy/<%= product.id %>" method="POST">
				<input type="submit" class="btn btn-danger btn-block" value="Delete">
				<input type="hidden" name="_csrf" value="<%= _csrf %>">
			</form>
		</div>		
	</div>
</div>
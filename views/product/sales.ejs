<div class="container">
	<h1 class="pageHeader"><%= product.name %> Sales</h1>

	<a href="/sale/new" class="addButton btn-index-new">
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
	</a>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Sale</th>
				<th>Customer</th>
				<th>Quantity</th>
				<th>Line Item Total</th>
				<th>Sale Total</th>
				<th>Sale Date</th>
			</tr>
		</thead>
		<tbody>
			<% _.each(items, function(item) { %>
				<tr>
					<td>	
						<a href="/sale/show<%= item.sale.id %>" class="btn btn-primary">View Sale</a>				
					</td>
					<td>
						<%= item.sale.customer %>
					</td>						
					<td>
						<%= item.quantity %>
					</td>
					<td>
						$<%=  Number(item.totalPrice).toLocaleString('en') %>
					</td>
					<td>
						$<%=  Number(item.sale.totalPrice).toLocaleString('en') %>
					</td>
					<td>
						<%= item.sale.createdAt %>
					</td>
				</tr>
			<% }); %>
		</tbody>
	</table>
</div>
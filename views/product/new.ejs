<form action="/product/create" method="POST" class="form-sign-in">
	<h2>Create Product</h2>

	<% if(flash && flash.err) { %>
		<% Object.keys(flash.err).forEach(function(error) { %>
			<div class="alert alert-danger"><%- JSON.stringify(flash.err[error]) %></div>
		<% }) %>
	<% } %>	

	<div class="form-group">
		<input type="text" class="form-control" placeholder="name" name="name">
	</div>
	<div class="form-group">
 		<label>Unit Price</label>		
		<input type="integer" class="form-control" placeholder="1.23" name="unitPrice">
	</div>
	<div class="form-group">
 		<label>Inventory On Hand</label>	
		<input type="text" class="form-control" placeholder="0.00" name="inventoryOnHand">
	</div>
	<div class="form-group">
		<label>Bar Code Number</label>
		<input type="text" class="form-control" placeholder="123456789" name="barCodeNumber">
	</div>

	<input type="hidden" name="_csrf" value="<%= _csrf %>">

	<input type="submit" value="Create Product" class="btn btn-primary btn-lg btn-block">
	<a href="/product/index" class="btn btn-default btn-lg btn-block">Cancel</a>
</form>
<div class="container">
	<h1 class="pageHeader">All Users</h1>
	<a href="/user/new?source=userIndex" class="addButton btn-index-newUser">
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
	</a>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Title</th>
				<th>Email</th>
				<th>Created Date</th>
				<th colspan="2">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% _.each(users, function(user) { %>
				<tr>
					<td> <a href="/user/show/<%=user.id%>"><%= user.firstName + ' ' + user.lastName %></a></td>
					<td> <%= user.title %> </td>
					<td> <%= user.email %> </td>
					<td> <%= user.createdAt %> </td>
					<td>
						<a href="/user/edit/<%= user.id %>?source=userIndex" class="btn btn-primary">Edit</a>
					</td>
					<td>
						<form action="/user/destroy/<%= user.id %>" method="POST">
							<input type="submit" class="btn btn-danger" value="Delete">
							<input type="hidden" name="_csrf" value="<%= _csrf %>">
						</form>						
					</td>
				</tr>
			<% }); %>
		</tbody>
	</table>
</div>
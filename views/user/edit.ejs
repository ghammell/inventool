<div class="container">
	<center>
		<h1>Edit <%= user.firstName + ' ' + user.lastName %></h1>
	</center>
	
	<form action="/user/update/<%= user.id %>" method="POST" class="form-sign-in">
		<% if(flash && flash.err) { %>
			<% Object.keys(flash.err).forEach(function(error) { %>
				<div class="alert alert-danger"><%- JSON.stringify(flash.err[error]) %></div>
			<% }) %>
		<% } %>

		<div class="form-group">
			<input type="text" value="<%= user.firstName %>" class="form-control" placeholder="first name" name="firstName">
		</div>
		<div class="form-group">
			<input type="text" value="<%= user.lastName %>" class="form-control" placeholder="last name" name="lastName">
		</div>
		<div class="form-group">
			<input type="text" value="<%= user.title %>" class="form-control" placeholder="title" name="title">
		</div>	
		<div class="form-group">
			<input type="text" value="<%= user.email %>" class="form-control" placeholder="your@email.com" name="email">
		</div>

		<input type="submit" value="Update" class="btn btn-lg btn-success btn-block">
		<a href="/user/show/<%= user.id %>" class="btn btn-lg btn-default btn-block">Cancel</a>

		<input type="hidden" name="source" value="<%= source %>">
		<input type="hidden" name="_csrf" value="<%= _csrf %>">			
	</form>
</div>
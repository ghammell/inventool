<div class="container">
	<% if (product) { %>
		<h1 class="pageHeader"><%= product.name %> Purchases</h1>
	<% } else { %>
		<h1 class="pageHeader">All Purchases</h1>
	<% } %>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<% if (!product) { %> 
					<th>Product</th>
				<% } %>			
				<th>Quantity</th>
				<th>Created Date</th>
			</tr>
		</thead>
		<tbody>
			<% if (purchases && purchases.length > 0) { %>
				<% _.each(purchases, function(purchase) { %>
				<tr>
					<% if (!product) { %>
						<td><%= purchase.product.name %></td>
					<% } %>
					<td><%= purchase.quantity %></td>
					<td><%= purchase.createdAt %></td>
				</tr>				
				<% }); %>
			<% } else { %>
				<tr colspan="2"><td colspan="2"><center>No purchases found.</center></td></tr>
			<% } %>
		</tbody>
	</table>
</div>